<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        style="@style/tab_title"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/back_white"
            android:background="#00000000"
            android:id="@+id/notice_back"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:gravity="center"
            android:text="公告详情"
            style="@style/title_font" />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="更多"
            android:background="#00000000"
            style="@style/title_font"
            android:textSize="16sp"
            android:id="@+id/notice_more"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="非官方的广泛地"
            style="@style/two_title"
            android:gravity="center"
            android:id="@+id/notice_details_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            style="@style/tips_font"
            android:text="发布时间：2017/3/24 17:52:32"
            android:gravity="center"
            android:id="@+id/notice_details_time"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            style="@style/text_main"
            android:lineSpacingMultiplier="1.5"
            android:text="        的风格的功夫丹噶梵蒂冈的撒个放大规范的撒个发达股份的股份达股份达股份大概放大"
            android:id="@+id/notice_details_content"/>
    </LinearLayout>
</LinearLayout>