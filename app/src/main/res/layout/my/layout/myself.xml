<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <!--背景图以下的颜色-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_gray"
        android:orientation="vertical">

        <!--背景图-->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:background="@mipmap/bj">

            <!--头像位置摆放-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.example.androidbase.widget.CircleImageView
                    android:id="@+id/imv_head"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="18dp"
                    android:src="@mipmap/tou"
                    app:border_color="@color/head_border_width_clo"
                    app:border_width="1dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:text="用户名"
                        android:textColor="#fff"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/textview_shape"
                        android:paddingBottom="2dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="2dp"
                        android:text="实名认证"
                        android:textColor="#fff"
                        android:textSize="12sp"

                        />

                </LinearLayout>


            </LinearLayout>


            <!--右箭头位置摆放-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:layout_gravity="right"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/my_setting_32" />

            </LinearLayout>




        </FrameLayout>


        <LinearLayout
            android:id="@+id/address_setting"
            style="@style/mid_layout"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/address_32"></ImageView>

            <TextView
                style="@style/usertext"
                android:text="   地址管理" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>



        <View style="@style/bg_line" />

        <LinearLayout
            android:id="@+id/I_buy"
            style="@style/mid_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/buy_32"></ImageView>

            <TextView
                style="@style/usertext"
                android:text="   我买到的" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />


        <LinearLayout
            android:id="@+id/I_sell"
            style="@style/mid_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sell_32"></ImageView>

            <TextView
                style="@style/usertext"
                android:text="   我卖出的" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>
        <View style="@style/bg_line" />
        //我的购物车
        <LinearLayout
            android:id="@+id/my_assess_me"
            style="@style/mid_layout">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shopping_mycar">
            </ImageView>
            <TextView
                style="@style/usertext"
                android:text="   我的购物车" />
            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />

        <LinearLayout
            android:id="@+id/my_money"
            style="@style/mid_layout"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/money_32"></ImageView>

            <TextView
                style="@style/usertext"
                android:text="   我的钱包" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />

        <LinearLayout
            android:id="@+id/My_discount"
            style="@style/mid_layout">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/coupon_32"

                ></ImageView>

            <TextView
                style="@style/usertext"
                android:text="   我的优惠券" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>

        <View style="@style/bg_line" />

        <LinearLayout
            android:id="@+id/Mykitchen"
            style="@style/mid_layout"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cook_32"></ImageView>

            <TextView
                style="@style/usertext"
                android:text="   我的厨房" />

            <ImageView style="@style/img_arrow" />
        </LinearLayout>


    </LinearLayout>

</ScrollView>